{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./www/js",
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "jsx": "react"
    },
    "angularCompilerOptions": {
        "googleClosureOutput": true
    }
}